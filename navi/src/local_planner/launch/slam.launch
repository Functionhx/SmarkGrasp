<launch>
    <!-- 启动octomap_server节点 -->
    <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map" args="0.0 0.0 0.0 0 0 0 map camera_init 100"/>
    <node pkg="octomap_server" type="octomap_server_node" name="octomap_server" output="screen">
        <!-- 配置参数 -->
        <param name="frame_id" value="map"/>
        <param name="resolution" value="0.05"/>
        <param name="sensor_model/max_range" value="25.0"/>
        <!-- <param name="filter_ground" value="true"/> -->
        <param name="latch" value="true"/>
        <param name="pointcloud_max_z" value="2.5" />
        <param name="pointcloud_min_z" value="-0.3" />
        <!-- 指定点云话题 -->
        <remap from="cloud_in" to="/cloud_registered"/>
    </node>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find local_planner)/config/rviz/navi.rviz" />
</launch>

